@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.Create.CreateTipoHabitacionModel
@{
}

br />
<h2>Nuevo Tipo de Habitación</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='cerrar'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.TipoHabitación.Nombre" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Descripción</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="descripcion" value="@Model.TipoHabitación.Descripción" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Precio por Noche</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="precioPorNoche" value="@Model.TipoHabitación.PrecioPorNoche" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Capacidad</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="capacidad" value="@Model.TipoHabitación.Capacidad" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>