@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.Create.CreateHabitacionModel
@{
}

<br />
<h2>Nueva Habitación</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='cerrar'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Hotel ID</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="hotelId" value="@Model.Habitacion.HotelID" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tipo ID</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="tipoId" value="@Model.Habitacion.TipoID" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Estado</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="estado" value="@Model.Habitacion.Estado" />
        </div>
    </div>

    <!-- Agregar más campos según sea necesario -->

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>