@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.Create.CreateReservaServiciosModel
@{
}

<br />
<h2>Nueva Reserva de Servicio</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='cerrar'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID de Servicio</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="idServicio" value="@Model.ReservaServicio.IDServicio" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID de Reserva</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="idReserva" value="@Model.ReservaServicio.IDReserva" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>