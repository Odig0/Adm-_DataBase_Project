@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.Create.CreatePersonalModel
@{
}
<br />
<h2>Nuevo Personal</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='cerrar'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Hotel ID</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="hotelID" value="@Model.Personal.HotelID" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.Personal.Nombre" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Apellido</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="apellido" value="@Model.Personal.Apellido" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Posición</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="posicion" value="@Model.Personal.Posicion" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Salario</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="salario" value="@Model.Personal.Salario" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de Nacimiento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fechaDeNacimiento" value="@Model.Personal.FechaDeNacimiento.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Teléfono</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="telefono" value="@Model.Personal.Telefono" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de Contratación</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fechaDeContratacion" value="@Model.Personal.FechaDeContratacion.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>