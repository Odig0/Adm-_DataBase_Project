@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.TipoHabitaciónModel
@{
}
<br />
<h2>Lista de Tipos de Habitación</h2>

<a class="btn btn-primary btn-sm" href='/Client/Create/CreateTipoHabitacion'> Crear Nuevo Tipo de Habitación</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio por Noche</th>
            <th>Capacidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listTipoHabitaciones)
        {
            <tr>
                <td>@item.TipoID</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.PrecioPorNoche</td>
                <td>@item.Capacidad</td>
                <td>
                    <a class="btn btn-primary btn-sm" href='/Client/Edit/EditTipoHabitacion?TipoID=@item.TipoID'>Editar</a>
                    <a class="btn btn-primary btn-sm" href='/Client/DeleteTipoHabitacion?TipoID=@item.TipoID'>Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
