@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.HabitacionModel

<br />
<h2>Lista de Habitaciones</h2>

<a class="btn btn-primary btn-sm" href='/Client/Create/CreateHabitacion'> Crear Nueva Habitación</a>
<table class="table">
    <thead>
        <tr>
            <th>Número de Habitación</th>
            <th>Hotel ID</th>
            <th>Tipo ID</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listHabitaciones)
        {
            <tr>
                <td>@item.NumeroHabitacion</td>
                <td>@item.HotelID</td>
                <td>@item.TipoID</td>
                <td>@item.Estado</td>
                <td>
                    <a class="btn btn-primary btn-sm" href='/Client/Edit/EditHabitacion?NumeroHabitacion=@item.NumeroHabitacion'>Editar</a>
                    <a class="btn btn-primary btn-sm" href='/Client/DeleteHabitacion?NumeroHabitacion=@item.NumeroHabitacion'>Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
