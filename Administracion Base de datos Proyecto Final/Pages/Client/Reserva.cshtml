@page
@model Administracion_Base_de_datos_Proyecto_Final.Pages.Client.ReservaModel

<br />
<h2>Reserva Habitaciones</h2>

<a class="btn btn-primary btn-sm" href='/Client/Create/CreateReserva'> Crear Nueva Reserva</a>

<table class="table">
    <thead>
        <tr>
            <th>ID de Reserva</th>
            <th>ID de Huésped</th>
            <th>Número de Habitación</th>
            <th>Fecha de Entrada</th>
            <th>Fecha de Salida</th>
            <th>Precio Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listReservas)
        {
            <tr>
                <td>@item.IDReserva</td>
                <td>@item.IDHuesped</td>
                <td>@item.NumeroHabitacion</td>
                <td>@item.FechaDeEntrada</td>
                <td>@item.FechaDeSalida</td>
                <td>@item.PrecioTotal</td>
                <td>
                    <a class="btn btn-primary btn-sm" href='/Client/Edit/EditReserva?IDReserva=@item.IDReserva'>Editar</a>
                    <a class="btn btn-primary btn-sm" href='/Client/DeleteReserva?IDReserva=@item.IDReserva'>Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
