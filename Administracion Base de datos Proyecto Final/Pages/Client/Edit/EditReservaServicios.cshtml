@{
}
<br />
<h2>Editar Reserva de Servicio</h2>

<form method="POST">
    <input type="hidden" name="IDReservaServicio" value="@Model.reservaServicio.IDReservaServicio" />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID Servicio</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="IDServicio" value="@Model.reservaServicio.IDServicio" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID Reserva</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="IDReserva" value="@Model.reservaServicio.IDReserva" />
        </div>
    </div>

    <!-- Agregar más campos según sea necesario -->

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>